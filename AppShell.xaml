<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TaskManagerMobile.Views"
    x:Class="TaskManagerMobile.AppShell">

    <TabBar>
        <ShellContent Title="Home" ContentTemplate="{DataTemplate local:DashboardPage}" Route="Home" />
        <ShellContent Title="New" ContentTemplate="{DataTemplate local:TaskEditPage}" Route="New" />
        <ShellContent Title="Tasks" ContentTemplate="{DataTemplate local:TaskListPage}" Route="Tasks" />
    </TabBar>
</Shell>
